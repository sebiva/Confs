
# Use C-h as escape key
escape ^hh

# Title bar 
caption always "%{yK} $LOGNAME@%H | %l | %C:%s %A - %M-%d-%Y | %-Lw%50>%{Ky}%n%f* %t%{-}%+Lw%<%{- Wk}%{yK} | "


# Make copy mode emacs-friendly
markkeys j=^N:k=^P:l=^F:0=^A:$=^E:^F=^V
bindkey -m -t ^[v    stuff ^B
bindkey -m    ^B     stuff h
bindkey -m -t ^[a    stuff \^
bindkey -m -t ^[f    stuff w
bindkey -m -t ^[b    stuff b
bindkey -m -t ^[0^[r stuff H
# Nothing for 'M'
bindkey -m -t ^[-^[r stuff L
bindkey -m -t ^[<    stuff g
bindkey -m -t ^[>    stuff G
bindkey -m -t ^[d    stuff " e "